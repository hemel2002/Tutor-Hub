<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Teacher Edit Profile</title>
    <!-- MDB CSS -->
    <link
      href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,700&display=swap"
      rel="stylesheet"
    />
    <!-- MDB -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/8.1.0/mdb.min.css"
      rel="stylesheet"
    />
    <script
      type="text/javascript"
      src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.2.0/mdb.min.js"
    ></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/8.1.0/mdb.umd.min.js"></script>
    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <style>
      body {
        font-family: 'Arial', sans-serif;
        background-color: #f8f9fa;
        margin: 0;
        padding: 0;
      }

      /* Navbar */
      .navbar {
        height: 60px; /* Adjust based on your navbar height */
      }

      /* Sidebar */
      .sidebar {
        width: 250px;
        background: #eaeaea; /* Sidebar background */
        height: calc(100vh - 60px); /* Full height minus navbar height */
        position: fixed;
        top: 60px; /* Below the navbar */
        left: 0;
        padding: 20px 15px;
        box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
        overflow-y: auto; /* Add scroll if content overflows */
        transition: transform 0.3s ease;
      }

      .sidebar .nav-link {
        color: rgb(0, 0, 0);
        font-weight: bold;
        display: flex;
        align-items: center;
        margin-bottom: 15px;
        transition: all 0.3s ease;
      }

      .sidebar .nav-link:hover {
        color: #ff6262;
        text-decoration: none;
        transform: translateX(5px);
      }

      .sidebar .nav-link i {
        margin-right: 10px;
      }

      .sidebar .brand {
        font-size: 1.5rem;
        font-weight: bold;
        margin-bottom: 30px;
        display: block;
        text-align: center;
        color: black;
      }

      /* Main Content */
      .main-content {
        margin-left: 250px; /* Adjusted to match sidebar width */
        margin-top: 60px; /* Adjusted to match navbar height */
        padding: 20px;
        transition: margin-left 0.3s ease;
      }

      .main-content h3 {
        margin-bottom: 20px;
      }

      .form-outline {
        margin-bottom: 20px;
      }

      .btn-block {
        width: 100%;
      }

      /* Footer */
      footer {
        text-align: center;
        padding: 10px;
        background-color: #33b156;
        color: #f8f9fa;
        position: fixed;
        bottom: 0;
        width: calc(100% - 250px); /* Adjusted to account for sidebar width */
        margin-left: 250px; /* Adjusted to match sidebar width */
        transition: width 0.3s ease, margin-left 0.3s ease;
      }

      /* Responsive Styles */
      @media (max-width: 768px) {
        .sidebar {
          transform: translateX(-100%); /* Hide sidebar on smaller screens */
        }

        .main-content {
          margin-left: 0; /* Full width on smaller screens */
        }

        footer {
          width: 100%; /* Full width on smaller screens */
          margin-left: 0;
        }

        /* Show sidebar when toggled */
        .sidebar.active {
          transform: translateX(0);
        }

        /* Overlay for sidebar */
        .overlay {
          display: none;
          position: fixed;
          top: 60px;
          left: 0;
          width: 100%;
          height: 100%;
          background: rgba(0, 0, 0, 0.5);
          z-index: 1000;
        }

        .overlay.active {
          display: block;
        }
      }
    </style>
  </head>
  <body>
    <!-- Navbar -->
    <nav
      class="navbar navbar-expand-lg navbar-light fixed-top"
      style="background-color: #36c114"
    >
      <div class="container-fluid">
        <!-- Navbar brand -->
        <a class="navbar-brand text-white fw-bold" href="/home">Tutor-Hub</a>

        <!-- Toggle button for sidebar -->
        <button
          class="navbar-toggler d-block d-md-none"
          type="button"
          id="sidebarToggle"
        >
          <i class="fas fa-bars text-white"></i>
        </button>

        <!-- Collapsible wrapper -->
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <!-- Left links -->
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link text-white" href="/home">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" href="/nearby">Nearby Teachers</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" href="/contact">Contact</a>
            </li>
            <% if (UserId) { %>
            <li class="nav-item">
              <a class="nav-link text-white" href="/<%= accountType %>/dashboard"
                >Dashboard</a
              >
            </li>
            <% } %>
          </ul>

          <!-- Right links -->
          <ul class="navbar-nav d-flex flex-row align-items-center">
            <!-- Notifications dropdown -->
            <li class="nav-item dropdown me-3">
              <a
                class="nav-link dropdown-toggle hidden-arrow text-white"
                href="#"
                id="navbarDropdownMenuLink"
                role="button"
                data-mdb-toggle="dropdown"
                aria-expanded="false"
              >
                <i class="fas fa-bell"></i>
                <span class="badge rounded-pill badge-notification bg-danger"
                  >1</span
                >
              </a>
              <ul
                class="dropdown-menu dropdown-menu-start"
                aria-labelledby="navbarDropdownMenuLink"
              >
                <li>
                  <a class="dropdown-item" href="#">Some news</a>
                </li>
                <li>
                  <a class="dropdown-item" href="#">Another news</a>
                </li>
                <li>
                  <a class="dropdown-item" href="#">Something else here</a>
                </li>
              </ul>
            </li>

            <!-- Sign in button -->
            <% if (!UserId) { %>
            <li class="nav-item me-2">
              <a class="nav-link" href="/signin">
                <button class="btn btn-light text-success">Sign in</button>
              </a>
            </li>

            <!-- Sign up button -->
            <li class="nav-item">
              <a class="nav-link" href="/signup">
                <button class="btn btn-light">Sign up</button>
              </a>
            </li>
            <% } %>
          </ul>

          <!-- Search -->
          <form class="d-flex ms-3">
            <input
              type="search"
              class="form-control"
              placeholder="Type query"
              aria-label="Search"
            />
            <button class="btn btn-light ms-2" type="submit">Search</button>
          </form>
        </div>
      </div>
    </nav>

    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
      <a href="/teacher/dashboard" class="brand text-danger">Dashboard</a>
      <a class="nav-link" href="/teacher/dashboard">
        <i class="fas fa-home"></i> Dashboard
      </a>
      <a class="nav-link" href="/teacher/changecalender">
        <i class="fas fa-calendar-alt"></i> Availability Calendar
      </a>
      <a class="nav-link" href="/teacher/PaymentHistory">
        <i class="fas fa-history"></i> Transaction History
      </a>
      <a class="nav-link" href="/teacher/ChangePassword">
        <i class="fas fa-key"></i> Change Password
      </a>
      <a class="nav-link" href="/teacher/viewprofile">
        <i class="fas fa-user"></i> View Profile
      </a>
      <a class="nav-link" href="/teacher/GetVerified">
        <i class="fas fa-check-circle"></i> Verify Profile
      </a>
      <a class="nav-link" href="/teacher/editprofile">
        <i class="fas fa-edit"></i> Edit Profile
      </a>
      <a class="nav-link" href="/logout">
        <i class="fas fa-sign-out-alt"></i> Log Out
      </a>
    </div>

    <!-- Overlay for sidebar on mobile -->
    <div class="overlay" id="overlay"></div>

    <!-- Main Content -->
    <div class="main-content" id="mainContent">
      <div class="payment-history">
        <h3>Teacher Edit Profile</h3>
        <form>
          <!-- Name -->
          <div class="form-outline mb-4">
            <input
              type="text"
              id="teacherName"
              class="form-control"
              value="John Doe"
            />
            <label class="form-label" for="teacherName">Full Name</label>
          </div>

          <!-- Email -->
          <div class="form-outline mb-4">
            <input
              type="email"
              id="teacherEmail"
              class="form-control"
              value="johndoe@example.com"
            />
            <label class="form-label" for="teacherEmail">Email</label>
          </div>

          <!-- Subject Expertise -->
          <div class="form-outline mb-4">
            <input
              type="text"
              id="teacherSubject"
              class="form-control"
              value="Mathematics"
            />
            <label class="form-label" for="teacherSubject"
              >Subject Expertise</label
            >
          </div>

          <!-- Bio -->
          <div class="form-outline mb-4">
            <textarea id="teacherBio" class="form-control" rows="4">
Passionate about teaching and inspiring students.</textarea
            >
            <label class="form-label" for="teacherBio">Bio</label>
          </div>

          <!-- Profile Picture -->
          <div class="mb-4">
            <label for="profilePicture" class="form-label"
              >Profile Picture</label
            >
            <input type="file" class="form-control" id="profilePicture" />
          </div>

          <!-- Save Changes Button -->
          <button type="submit" class="btn btn-success btn-block">
            Save Changes
          </button>
        </form>
      </div>
    </div>

    <!-- Footer -->
    <footer>&copy; 2025 Tutor Hub. All Rights Reserved.</footer>

    <!-- MDB JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.2.0/mdb.min.js"></script>
    <!-- Font Awesome -->
    <script
      src="https://kit.fontawesome.com/a076d05399.js"
      crossorigin="anonymous"
    ></script>
    <script>
      // Toggle sidebar on mobile
      const sidebarToggle = document.getElementById('sidebarToggle');
      const sidebar = document.getElementById('sidebar');
      const overlay = document.getElementById('overlay');
      const mainContent = document.getElementById('mainContent');

      sidebarToggle.addEventListener('click', () => {
        sidebar.classList.toggle('active');
        overlay.classList.toggle('active');
      });

      overlay.addEventListener('click', () => {
        sidebar.classList.remove('active');
        overlay.classList.remove('active');
      });
    </script>
  </body>
</html>