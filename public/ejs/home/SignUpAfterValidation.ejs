<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Profile</title>
    <!-- MDB CSS -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.3.0/mdb.min.css"
    />
    <!-- Font Awesome for Icons -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
    />
    <!-- Custom CSS -->
    <style>
      .edit-profile-header {
        background-color: #2af19a;
        color: white;
        padding: 50px 0;
        text-align: center;
        border-radius: 0 0 50% 50%;
      }

      .edit-profile-form {
        margin-top: 50px;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
      }

      .form-control {
        margin-top: 40px;
        margin-bottom: 40px;
      }

      .btn-update {
        width: 100%;
        background-color: #0ef7b5;
        margin-top: 30px;
      }

      .form-section {
        padding: 30px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        border-radius: 15px;
      }

      .profile-picture {
        border-radius: 50%;
        border: 5px solid white;
        width: 100px;
        height: 100px;
        object-fit: cover; /* Ensure the image fits the circle */
      }
    </style>
  </head>
  <body>
    <%- include('../flash/homeFlash') %>
    <!-- Edit Profile Header -->
    <section class="edit-profile-header" id="edit-profile-header">
      <h1 class="mb-0">Hello <%= fullname %> !</h1>
    </section>

    <!-- Edit Profile Form -->
    <div class="container edit-profile-form">
      <div class="form-section" id="edit-form">
        <form
          id="profileForm"
          class="needs-validation"
          action="http://localhost:3000/validuser"
          method="post"
          novalidate
        >
          <div class="text-center">
            <img
              src="<%= pic %>"
              alt="Profile Picture"
              class="profile-picture mb-4"
              id="profile-picture"
            />
            <br />
            <!-- Add icon button for image upload inside the form -->
          </div>

          <div class="form-outline">
            <input
              type="email"
              name="email"
              id="email"
              class="form-control"
              value="<%= email %>"
              readonly
              required
            />
            <label class="form-label" for="email">Email</label>
          </div>

          <div class="form-outline col-auto" data-mdb-input-init>
            <input
              type="password"
              id="formTextExample2"
              name="password"
              class="form-control"
              aria-describedby="textExample2"
            />
            <label class="form-label" for="formTextExample2">Password</label>
          </div>
          <button type="submit" class="btn btn-update" id="btn-update">
            Sign in
          </button>
        </form>
      </div>
    </div>

    <!-- MDB JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.3.0/mdb.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
