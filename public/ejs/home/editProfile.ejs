<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Profile</title>
    <!-- MDB CSS -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.3.0/mdb.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
    />
    <!-- Custom CSS -->
  </head>
  <body>
    <%- include('../NavBar/NavBar') %> <%- include('../flash/homeFlash') %>

    <div class="container">
      <!-- Edit Profile Header -->
      <div class="edit-profile-header">
        <h1 class="mb-0">Hello, <%= fullname %>!</h1>
      </div>

      <!-- Edit Profile Form -->
      <div class="edit-profile-form">
        <form
          id="profileForm"
          class="needs-validation"
          action="/validuser"
          method="post"
          novalidate
        >
          <div class="text-center">
            <img
              src="<%= pic %>"
              alt="Profile Picture"
              class="profile-picture"
              id="profile-picture"
            />
          </div>

          <div class="form-outline">
            <input
              type="email"
              name="email"
              id="email"
              class="form-control"
              value="<%= email %>"
              readonly
              required
            />
            <label class="form-label" for="email">Email</label>
          </div>

          <div class="form-outline">
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Enter new password"
              aria-describedby="passwordHelp"
              required
            />
            <label class="form-label" for="password">Password</label>
          </div>

          <button type="submit" class="btn btn-update">Log in</button>
          <p class="text-center mt-4">or</p>
          <a href="/signup" class="btn btn-link">Sign up</a>
          <hr />
          <a
            href="/forgetpassword"
            class="text-decoration-none d-block text-center"
          >
            Forgot Password?
          </a>
        </form>
      </div>
    </div>

    <!-- MDB JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.3.0/mdb.min.js"></script>
  </body>
</html>
