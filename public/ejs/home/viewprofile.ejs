<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>View Profile</title>
    <!-- Google Fonts -->
    <link
      href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,700&display=swap"
      rel="stylesheet"
    />
    <!-- MDB CSS -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/8.1.0/mdb.min.css"
      rel="stylesheet"
    />
    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <style>
      body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(135deg, #f5f7fa, #c3cfe2);
        color: #333;
      }

      .profile-header {
        background: linear-gradient(135deg, #36c114, #2a9d8f);
        color: white;
        padding: 60px 20px;
        text-align: center;
      }

      .profile-header h1 {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 10px;
      }

      .profile-header p {
        font-size: 1.2rem;
        font-weight: 400;
      }

      .card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: transform 0.3s ease;
      }

      .card:hover {
        transform: translateY(-10px);
      }

      .img-fluid.rounded-circle {
        border: 4px solid #36c114;
        transition: transform 0.3s ease;
      }

      .img-fluid.rounded-circle:hover {
        transform: scale(1.1);
      }

      .skills-badge {
        font-size: 0.9rem;
        margin: 5px;
        padding: 8px 12px;
        border-radius: 20px;
      }

      .review-card {
        background: white;
        border-radius: 10px;
        padding: 20px;
        margin-bottom: 15px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      }

      .review-card p {
        margin: 0;
        font-size: 1rem;
      }

      .map-section iframe {
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
      }

      footer {
        background: #333;
        color: white;
        text-align: center;
        padding: 20px 0;
        margin-top: 40px;
      }

      /* Responsive Design */
      @media (max-width: 768px) {
        .profile-header h1 {
          font-size: 2rem;
        }

        .profile-header p {
          font-size: 1rem;
        }

        .card-body {
          text-align: center;
        }

        .col-md-4.text-center {
          margin-bottom: 20px;
        }
      }
    </style>
  </head>
  <body>
    <!-- Navbar -->
    <%- include('../NavBar/NavBar') %>

    <!-- Profile Header -->
    <div class="profile-header mt-5">
      <h1><%= tutor.firstName %> <%= tutor.lastName %></h1>
      <p><%= tutor.preferableSubjects %> | 2 Years of Experience</p>
    </div>

    <!-- Profile Content -->
    <div class="container mt-5">
      <div class="card">
        <div class="row g-0">
          <div class="col-md-4 text-center">
            <img
              src="<%= tutor.profilePicture %>"
              class="img-fluid rounded-circle mt-4"
              alt="Tutor Image"
              style="width: 150px; height: 150px"
            />
          </div>
          <div class="col-md-8 mt-5">
            <div class="card-body">
              <h5>About <%= tutor.firstName %></h5>
              <p>
                <%= tutor.firstName %> is an experienced <%=
                tutor.preferableSubjects %> tutor with a passion for teaching.
              </p>
              <p>
                <i class="fas fa-map-marker-alt me-2"></i><%= tutor.location
                %><br />
                <i class="fas fa-envelope me-2"></i><%= tutor.email %>
              </p>
              <a
                href="mailto:<%= tutor.email %>"
                class="btn btn-success btn-rounded"
                >Contact</a
              >
              <!-- Hire Tutor Button with Modal Trigger -->
              <button
                type="button"
                class="btn btn-success btn-rounded"
                data-mdb-toggle="modal"
                data-mdb-target="#hireTutorModal"
              >
                Hire Tutor
              </button>
            </div>
          </div>
        </div>
      </div>

      <!-- Skills Section -->
      <div class="mt-4">
        <h3>Skills</h3>
        <span class="badge bg-success skills-badge">Algebra</span>
        <span class="badge bg-success skills-badge">Calculus</span>
        <span class="badge bg-success skills-badge">Geometry</span>
      </div>

      <!-- Reviews Section -->
      <div class="mt-4">
        <h3>Reviews</h3>
        <div class="review-card">
          <p>
            "<%= tutor.firstName %> is an excellent tutor who makes complex
            topics easy to understand."
          </p>
          <p><strong>- Student 1</strong>, 5 ★</p>
        </div>
        <div class="review-card">
          <p>
            "Highly recommend <%= tutor.firstName %> for anyone looking to
            improve their math skills."
          </p>
          <p><strong>- Student 2</strong>, 4 ★</p>
        </div>
      </div>

      <!-- Map Section -->
      <div class="map-section mt-4">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3151.8354345095776!2d144.9537363153168!3d-37.81627974202145!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x6ad642af0f11fd81%3A0xf57700e4f71e3a10!2sFederation%20Square!5e0!3m2!1sen!2sau!4v1618392813893!5m2!1sen!2sau"
          width="100%"
          height="350"
          style="border: 0"
          allowfullscreen=""
          loading="lazy"
        ></iframe>
      </div>
    </div>

    <!-- Footer -->
    <footer>
      <p>&copy; 2025 Tutor-Hub. All Rights Reserved.</p>
    </footer>

    <!-- Hire Tutor Modal -->
    <div
      class="modal fade"
      id="hireTutorModal"
      tabindex="-1"
      aria-labelledby="hireTutorModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="hireTutorModalLabel">Hire Tutor</h5>
            <button
              type="button"
              class="btn-close"
              data-mdb-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <form id="hireTutorForm" action="/student/hireTutor" method="get">
              <!-- Student Location -->
              <div class="mb-3">
                <label for="studentLocation" class="form-label"
                  >Your Location</label
                >
                <input
                  type="text"
                  class="form-control"
                  id="studentLocation"
                  placeholder="Enter your location"
                  name="location"
                  required
                />
              </div>
              <div class="mb-3">
                <label for="tutorEmail" class="form-label">Teacher Email</label>
                <input
                  type="text"
                  class="form-control"
                  id="tutorEmail"
                  name="tutorEmail"
                  value="<%= tutor.email %>"
                  readonly
                  required
                />
              </div>
              <!-- Salary -->
              <div class="mb-3">
                <label for="salary" class="form-label">Salary</label>
                <input
                  type="text"
                  class="form-control"
                  id="salary"
                  name="salary"
                />
              </div>
              <!-- Class -->
              <div class="mb-3">
                <label for="class" class="form-label">Class</label>
                <input
                  type="text"
                  class="form-control"
                  id="class"
                  name="class"
                  placeholder="Enter Class"
                  required
                />
              </div>
              <!-- Subject -->
              <div class="mb-3">
                <label for="subject" class="form-label">Subject</label>
                <input
                  type="text"
                  class="form-control"
                  id="subject"
                  name="subject"
                  placeholder="Enter subject"
                  required
                />
              </div>
              <!-- Message -->
              <div class="mb-3">
                <label for="message" class="form-label">Message</label>
                <textarea
                  class="form-control"
                  id="message"
                  name="message"
                  rows="4"
                  placeholder="Enter your message"
                  required
                ></textarea>
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-mdb-dismiss="modal"
            >
              Close
            </button>
            <button
              type="button"
              class="btn btn-success"
              onclick="submitHireRequest()"
            >
              <i class="fas fa-paper-plane me-2"></i>Send Request
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Success Notification Toast -->
    <div
      class="toast align-items-center text-white bg-success border-0 position-fixed bottom-0 end-0 m-3"
      role="alert"
      aria-live="assertive"
      aria-atomic="true"
      id="successToast"
    >
      <div class="d-flex">
        <div class="toast-body">
          <i class="fas fa-check-circle me-2"></i>Request submitted
          successfully!
        </div>
        <button
          type="button"
          class="btn-close btn-close-white me-2 m-auto"
          data-mdb-dismiss="toast"
          aria-label="Close"
        ></button>
      </div>
    </div>

    <!-- MDB Scripts -->
    <script
      type="text/javascript"
      src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.2.0/mdb.min.js"
    ></script>
    <script>
      // Function to submit hire request
      function submitHireRequest() {
        const form = document.getElementById('hireTutorForm');

        // Validate inputs
        if (!form.checkValidity()) {
          form.reportValidity(); // Show validation messages
          return;
        }

        // Submit the form
        form.submit();

        // Show success notification
        const toast = new mdb.Toast(document.getElementById('successToast'));
        toast.show();

        // Close the modal after 2 seconds
        setTimeout(() => {
          const modal = mdb.Modal.getInstance(
            document.getElementById('hireTutorModal')
          );
          modal.hide();
        }, 2000);
      }
    </script>
  </body>
</html>
