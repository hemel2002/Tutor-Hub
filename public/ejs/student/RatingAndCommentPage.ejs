<!DOCTYPE html>
<html lang="en">
  <head>
    <script src="../assets/js/color-modes.js"></script>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="Tutor rating and comments page" />
    <meta name="author" content="Your Name" />
    <title>Rating & Comment</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      crossorigin="anonymous"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.min.css"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: 'Roboto', sans-serif;
        background: linear-gradient(to right, #f7f8fc, #e8effa);
        padding: 5%;
      }

      .card {
        background: #ffffff;
        border-radius: 1rem;
        padding: 5%;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
        text-align: center;
        position: relative;
        margin-top: 3rem;
      }

      h1 {
        color: #343a40;
        font-weight: 700;
        margin-bottom: 1rem;
      }

      .svg-container {
        position: absolute;
        top: -4rem;
        left: 50%;
        transform: translateX(-50%);
        width: 8rem;
        height: 8rem;
        background: #ffffff;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
      }

      .svg-container img {
        width: 70%;
        height: 70%;
      }

      .star {
        font-size: 2rem;
        color: #ccc;
        cursor: pointer;
        transition: transform 0.3s, color 0.3s;
        margin: 0 0.3rem;
      }

      .star:hover,
      .star.selected {
        color: #f39c12;
        transform: scale(1.2);
      }

      #output {
        margin-top: 1.5rem;
        color: #555;
        font-weight: 500;
      }

      textarea {
        width: 100%;
        margin-top: 1rem;
        padding: 0.8rem;
        border-radius: 0.5rem;
        border: 1px solid #ced4da;
        font-size: 1rem;
        resize: none;
      }

      button {
        margin-top: 1rem;
        padding: 0.8rem 1.5rem;
        border-radius: 0.5rem;
        border: none;
        background: #007bff;
        color: white;
        font-size: 1rem;
        font-weight: 500;
        transition: background-color 0.3s;
      }

      button:hover {
        background: #0056b3;
      }

      ul#comment-list {
        list-style: none;
        padding: 0;
        margin-top: 2rem;
      }

      ul#comment-list li {
        background: #f7f9fc;
        border-radius: 0.5rem;
        padding: 1rem;
        margin-bottom: 1rem;
        box-shadow: 0 0.2rem 0.5rem rgba(0, 0, 0, 0.1);
      }

      ul#comment-list li strong {
        color: #007bff;
      }

      .reply-section {
        margin-top: 1rem;
        padding-left: 1.5rem;
        border-left: 2px solid #007bff;
      }
    </style>
  </head>

  <body>
    <div class="container">
      <div class="card mx-auto" style="max-width: 90vw">
        <div class="svg-container">
          <img
            src="https://res.cloudinary.com/da7hqzvvf/image/upload/v1724531262/profile_pic/ib0f9aexeto7vw9c3rqf.webp"
            alt="Star Rating"
          />
        </div>
        <h1>Rate Your Tutor</h1>
        <div>
          <span onclick="gfg(1)" class="star">★</span>
          <span onclick="gfg(2)" class="star">★</span>
          <span onclick="gfg(3)" class="star">★</span>
          <span onclick="gfg(4)" class="star">★</span>
          <span onclick="gfg(5)" class="star">★</span>
        </div>
        <h3 id="output">Current Rating: 0/5</h3>
      </div>

      <!-- Comments Section -->
      <div class="mt-5">
        <h2>Comments</h2>
        <ul id="comment-list" class="list-unstyled">
          <li>
            <strong>John:</strong>
            <p>Great tutor, very helpful!</p>
            <!-- Reply Section for John -->
            <div class="reply-section">
              <ul id="reply-list-john" class="list-unstyled">
                <li>
                  <strong>Admin:</strong> Thank you, John! We're happy to hear
                  this.
                </li>
              </ul>
              <textarea
                id="reply-input-john"
                rows="2"
                placeholder="Write a reply..."
              ></textarea>
              <button onclick="submitReply('john')">Reply</button>
            </div>
          </li>
          <li>
            <strong>Jane:</strong>
            <p>Explained the concepts clearly. Highly recommend!</p>
            <!-- Reply Section for Jane -->
            <div class="reply-section">
              <ul id="reply-list-jane" class="list-unstyled">
                <li>
                  <strong>Admin:</strong> Thank you for the recommendation,
                  Jane!
                </li>
              </ul>
              <textarea
                id="reply-input-jane"
                rows="2"
                placeholder="Write a reply..."
              ></textarea>
              <button onclick="submitReply('jane')">Reply</button>
            </div>
          </li>
        </ul>
        <textarea
          id="comment-input"
          rows="3"
          placeholder="Write your comment here..."
        ></textarea>
        <button id="submit-comment">Submit Comment</button>
      </div>
    </div>

    <script>
      function gfg(rating) {
        document.getElementById(
          'output'
        ).innerText = `Current Rating: ${rating}/5`;
        const stars = document.querySelectorAll('.star');
        stars.forEach((star, index) => {
          if (index < rating) {
            star.classList.add('selected');
          } else {
            star.classList.remove('selected');
          }
        });
      }

      function submitReply(user) {
        const replyInput = document.getElementById(`reply-input-${user}`);
        const replyList = document.getElementById(`reply-list-${user}`);
        const replyText = replyInput.value.trim();

        if (replyText) {
          const newReply = document.createElement('li');
          newReply.innerHTML = `<strong>Admin:</strong> ${replyText}`;
          replyList.appendChild(newReply);
          replyInput.value = '';
        }
      }
    </script>
  </body>
</html>
