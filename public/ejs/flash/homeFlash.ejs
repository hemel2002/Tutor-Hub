<% if (success&&success.length>0) { %>
<div
  class="alert alert-success mb-0 alert-dismissible alert-absolute fade show"
  id="alertExample"
  role="alert"
>
  <i class="fas fa-check me-2"></i>
  <%= success %>

  <button
    type="button"
    class="btn-close ms-2"
    data-mdb-dismiss="alert"
    aria-label="Close"
  ></button>
</div>

<script>
  // Auto-dismiss the alert after 2 seconds
  setTimeout(() => {
    const alert = document.getElementById('alertExample');
    if (alert) {
      const alertInstance =
        mdb.Alert.getInstance(alert) || new mdb.Alert(alert);
      alertInstance.close();
    }
  }, 5000); // 2000 milliseconds = 2 seconds
</script>
<% } %> <% if (error && error.length>0) { %>
<div
  class="alert alert-danger mb-0 alert-dismissible alert-absolute fade show"
  id="alertExample"
  role="alert"
  style="
    position: fixed;
    top: 20px;
    left: 20px;
    padding: 40px;
    z-index: 1050;
    width: auto;
    max-width: 90%;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    border-radius: 5px;
    font-size: 1.25rem;
  "
>
  <i class="fas fa-triangle-exclamation length"></i>
  <%= error %>
</div>
<script>
  // Auto-dismiss the alert after 2 seconds
  setTimeout(() => {
    const alert = document.getElementById('alertExample');
    if (alert) {
      const alertInstance =
        mdb.Alert.getInstance(alert) || new mdb.Alert(alert);
      alertInstance.close();
    }
  }, 5000); // 2000 milliseconds = 2 seconds
</script>

<% } %>
