<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Complaint Details</title>

     <!-- MDB CSS -->
     <link  href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/8.1.0/mdb.min.css"
     rel="stylesheet"
   />
   <!-- FontAwesome -->
   <link
     href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
     rel="stylesheet"
   />
   <!-- Google Fonts -->
   <link
     href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
     rel="stylesheet"
   />


    <style>
        body {
        font-family: 'Poppins', sans-serif;
        overflow-x: hidden;
      }

      .card:hover {
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        transform: translateY(-5px);

        transition: transform 0.3s, box-shadow 0.3s;
      }

      .sidebar .nav-link:hover {
        background-color: #007bff;
        color: white;
      }

      .nav-link.active {
        background-color: #007bff;
        color: white;
      }

      .complain-section {
        margin-top: 20px;
      }

      .profile-photo img {
        width: 100px;
        height: 100px;
      }

      .dark-mode {
        margin-top: 20px;
      }

      .profile {
        margin-top: 20px;
      }

      .table-responsive {
        margin-top: 20px;
      }

      .pagination {
        margin-top: 20px;
      }
    </style>
  </head>

  <body>
    <%- include('header') %> <%- include('side_navbar') %>
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-10">
          <div class="card">
            <div class="card-header">
              <h3 class="mb-0">Complaint Details</h3>
            </div>
            <div class="card-body">
              <div class="row">
                <div class="col-md-6">
                  <h5>Complaint ID:</h5>
                  <p>12345</p>
                  <h5>Customer Name:</h5>
                  <p>John Doe</p>
                  <h5>Email:</h5>
                  <p>johndoe@example.com</p>

                  <h5 class="text-danger">Total complaints: 3 times</h5>
                </div>
                <div class="col-md-6">
                  <h5>Complaint Date:</h5>
                  <p>2025-01-04</p>
                  <h5>Subject:</h5>
                  <p>Food Quality Issue</p>
                  <h5>Status:</h5>
                  <p class="badge bg-warning text-dark">Pending</p>
                </div>
              </div>
              <hr />
              <h5>Description:</h5>
              <p>Complaint regarding poor food quality and delayed delivery.</p>

              <hr />
              <h5>Actions:</h5>
              <button
                type="button"
                class="btn btn-success"
                data-bs-toggle="modal"
                data-bs-target="#resolveModal"
              >
                Resolve
              </button>
              <button
                type="button"
                class="btn btn-secondary"
                data-bs-toggle="modal"
                data-bs-target="#dismissModal"
              >
                Dismiss
              </button>
              <button
                type="button"
                class="btn btn-warning"
                data-bs-toggle="modal"
                data-bs-target="#warningModal"
              >
                Warning
              </button>

              <hr />

              <a
                href="#replyCollapse"
                class="link-info"
                data-bs-toggle="collapse"
                aria-expanded="false"
                aria-controls="replyCollapse"
              >
                Action
              </a>
              <div class="collapse mt-3" id="replyCollapse">
                <div class="card card-body">
                  <div class="mb-3">
                    <textarea
                      class="form-control text-danger"
                      id="replyMessage"
                      rows="4"
                      placeholder="Write your reply here..."
                      readonly
                    >
                      Apologies for the inconvenience. Your complaint has been acknowledged.
                    </textarea>
                    <p>2025-01-04</p>
                  </div>
                </div>
              </div>

              <hr />
              <h5>Previous Reports</h5>
              <div class="row">
                <div class="col-md-12">
                  <div class="card-deck">
                    <div class="card mb-4 shadow-2-strong">
                      <div class="card-body">
                        <h5 class="card-title">Report ID: 12344</h5>
                        <p class="card-text">
                          <strong>Subject:</strong> Delivery delay<br />
                          <strong>Date:</strong> 2025-01-02<br />
                          <strong>Status:</strong>
                          <span class="badge bg-success"> Resolved </span>
                        </p>
                        <a
                          href="/admin/123/complain_details?V_ID=567&C_ID=123"
                          class="btn btn-outline-primary"
                          >View Details</a
                        >
                      </div>
                    </div>
                    <div class="card mb-4 shadow-2-strong">
                      <div class="card-body">
                        <h5 class="card-title">Report ID: 12343</h5>
                        <p class="card-text">
                          <strong>Subject:</strong> Incorrect order<br />
                          <strong>Date:</strong> 2025-01-01<br />
                          <strong>Status:</strong>
                          <span class="badge bg-success"> Resolved </span>
                        </p>
                        <a
                          href="/admin/123/complain_details?V_ID=567&C_ID=124"
                          class="btn btn-outline-primary"
                          >View Details</a
                        >
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <hr />
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Modals -->
    <div
      class="modal fade"
      id="resolveModal"
      tabindex="-1"
      aria-labelledby="resolveModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="resolveModalLabel">
              Resolve Complaint
            </h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            Are you sure you want to resolve this complaint?
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Close
            </button>
            <button type="button" class="btn btn-primary">Resolve</button>
          </div>
        </div>
      </div>
    </div>

    <div
      class="modal fade"
      id="dismissModal"
      tabindex="-1"
      aria-labelledby="dismissModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="dismissModalLabel">
              Dismiss Complaint
            </h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            Are you sure you want to dismiss this complaint?
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Close
            </button>
            <button type="button" class="btn btn-danger">Dismiss</button>
          </div>
        </div>
      </div>
    </div>

    <div
      class="modal fade"
      id="warningModal"
      tabindex="-1"
      aria-labelledby="warningModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="warningModalLabel">Issue Warning</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <h5>Select Warning Type:</h5>
            <form
              id="warningForm"
              action="/admin/123/ComplaintAction?V_ID=567&C_ID=123"
              method="post"
            >
              <div class="mb-3">
                <label for="warningType" class="form-label"
                  >Warning Type:</label
                >
                <select
                  class="form-select"
                  id="warningType"
                  required
                  name="MESSAGE"
                >
                  <option value="" disabled selected>Select a warning</option>
                  <option value="restrict_food_creation Max 4 posts/day">
                    Restrict Food Creation (Max 4 posts/day)
                  </option>
                  <option value="restrict_food_creation Max 2 posts/day">
                    Restrict Food Creation (Max 2 posts/day)
                  </option>
                  <option value="Prevent Promotion (1 Day)">
                    Prevent Promotion (1 Day)
                  </option>
                  <option value="Prevent Promotion (2 Days)">
                    Prevent Promotion (2 Days)
                  </option>
                </select>
              </div>
              <button type="submit" class="btn btn-warning">
                Apply Warning
              </button>
            </form>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Close
            </button>
          </div>
        </div>
      </div>
    </div>

    <script>
      document.addEventListener('DOMContentLoaded', function () {
        const darkModeSwitch = document.getElementById('darkModeSwitch');
        const body = document.body;

        // Check localStorage for dark mode preference
        if (localStorage.getItem('darkMode') === 'enabled') {
          body.setAttribute('data-mdb-theme', 'dark');
          darkModeSwitch.checked = true;
        }

        darkModeSwitch.addEventListener('change', function () {
          if (darkModeSwitch.checked) {
            body.setAttribute('data-mdb-theme', 'dark');
            localStorage.setItem('darkMode', 'enabled');
          } else {
            body.removeAttribute('data-mdb-theme');
            localStorage.setItem('darkMode', 'disabled');
          }
        });
      });
    </script>
  </body>
</html>
