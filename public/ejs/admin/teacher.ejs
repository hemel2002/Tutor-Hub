<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tutor Management</title>
    <!-- MDB CSS -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.0/mdb.min.css"
      rel="stylesheet"
    />
    <!-- DataTables CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css"
    />
    <style>
      body {
        font-family: 'Poppins', sans-serif;
        overflow-x: hidden;
      }

      .navbar {
        background-color: #343a40;
        color: white;
      }

      .navbar .navbar-brand {
        color: #fff;
      }

      .navbar .nav-link {
        color: #ddd;
      }

      .navbar .nav-link:hover {
        color: #fff;
      }

      .sidebar {
        width: 250px;
        position: fixed;
        top: 56px;
        left: 0;
        height: 100%;
        background-color: #f8f9fa;
        border-right: 1px solid #ddd;
        padding-top: 20px;
      }

      .sidebar .nav-link {
        color: #333;
        padding: 10px 20px;
      }

      .sidebar .nav-link:hover {
        background-color: #e9ecef;
        color: #000;
      }

      .main-content {
        margin-left: 250px;
        padding: 20px;
      }

      @media (max-width: 768px) {
        .sidebar {
          position: absolute;
          left: -250px;
          transition: left 0.3s;
        }

        .sidebar.open {
          left: 0;
        }

        .main-content {
          margin-left: 0;
        }
      }

      .navbar-toggler {
        border: none;
      }
    </style>
  </head>
  <body>
    <!-- Navbar -->
    <%- include('header') %> <%- include('side_navbar') %>

    <!-- Search Bar -->
    <div class="container my-4 mt-5 pt-5">
      <div class="input-group">
        <input
          type="text"
          id="searchTutors"
          class="form-control"
          placeholder="Search tutors by name, subject, or email"
        />
        <button
          class="btn btn-success"
          data-mdb-toggle="modal"
          data-mdb-target="#addTutorModal"
        >
          Add Tutor
        </button>
      </div>
    </div>

    <!-- Tutor Cards -->
    <div class="container my-5">
      <div class="row">
        <div class="col-lg-4 col-md-6 mb-4">
          <div class="card tutor-card">
            <img
              src="<%= localhost %>/images/teacher.svg"
              class="card-img-top"
              alt="Tutor Image"
            />
            <div class="card-body text-center">
              <h5 class="card-title">John Doe</h5>
              <p class="card-text">Math & Science Tutor</p>
              <button class="btn btn-primary btn-sm">View Profile</button>
            </div>
          </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
          <div class="card tutor-card">
            <img
              src="<%= localhost %>/images/profile1.svg"
              height="360px"
              class="card-img-top"
              alt="Tutor Image"
            />
            <div class="card-body text-center">
              <h5 class="card-title">Jane Smith</h5>
              <p class="card-text">English & History Tutor</p>
              <button class="btn btn-primary btn-sm">View Profile</button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Tutor Management Table -->
    <div class="container table-container">
      <h3 class="text-center mb-4 text-danger">Manage Tutors</h3>
      <div class="table-responsive animated-table">
        <table id="tutorTable" class="table table-striped table-hover">
          <thead class="table-success">
            <tr>
              <th>#</th>
              <th>Name</th>
              <th>Subject</th>
              <th>Email</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>1</td>
              <td>John Doe</td>
              <td>Math</td>
              <td>john.doe@example.com</td>
              <td>
                <button class="btn btn-sm btn-warning">Edit</button>
                <button class="btn btn-sm btn-danger">Delete</button>
              </td>
            </tr>
            <tr>
              <td>2</td>
              <td>Jane Smith</td>
              <td>English</td>
              <td>jane.smith@example.com</td>
              <td>
                <button class="btn btn-sm btn-warning">Edit</button>
                <button class="btn btn-sm btn-danger">Delete</button>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Add Tutor Modal -->
    <div
      class="modal fade"
      id="addTutorModal"
      tabindex="-1"
      aria-labelledby="addTutorModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="addTutorModalLabel">Add New Tutor</h5>
            <button
              type="button"
              class="btn-close"
              data-mdb-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <form>
              <div class="mb-3">
                <label for="tutorName" class="form-label">Name</label>
                <input
                  type="text"
                  class="form-control"
                  id="tutorName"
                  required
                />
              </div>
              <div class="mb-3">
                <label for="tutorSubject" class="form-label">Subject</label>
                <input
                  type="text"
                  class="form-control"
                  id="tutorSubject"
                  required
                />
              </div>
              <div class="mb-3">
                <label for="tutorEmail" class="form-label">Email</label>
                <input
                  type="email"
                  class="form-control"
                  id="tutorEmail"
                  required
                />
              </div>
              <button type="submit" class="btn btn-success">Add Tutor</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- MDB JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.0/mdb.min.js"></script>
    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
      // Initialize DataTable
      $(document).ready(function () {
        $('#tutorTable').DataTable();

        // Search functionality
        $('#searchTutors').on('keyup', function () {
          $('#tutorTable').DataTable().search(this.value).draw();
        });
      });
    </script>
  </body>
</html>
